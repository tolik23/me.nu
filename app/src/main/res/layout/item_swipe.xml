<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgLogo"
            android:layout_margin="1dp"
            android:background="@drawable/frame"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_toEndOf="@+id/imgLogo" />


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txtName"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_toEndOf="@+id/imgLogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="#999999"
            android:id="@+id/txtNumberOfReviews"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txtName"
            android:layout_toRightOf="@+id/ratingBar"
            android:layout_toEndOf="@+id/ratingBar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/ic_room_13dp1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_alignTop="@+id/txtAddress"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_toEndOf="@+id/imgLogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddress"
            android:text="New Text"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_below="@+id/ratingBar"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDistance"
            android:text="New Text"
            android:textColor="#999999"
            android:paddingLeft="5dp"
            android:layout_below="@+id/txtAddress"
            android:layout_alignLeft="@+id/txtAddress"
            android:layout_alignStart="@+id/txtAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/txtClassOfRestaurant"
            android:layout_alignTop="@+id/txtDistance"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_bld_13dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/txtDistance"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_toEndOf="@+id/imgLogo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_below="@+id/txtDistance"
            android:layout_alignLeft="@+id/txtDistance"
            android:layout_alignStart="@+id/txtDistance" />


    </RelativeLayout>

</android.support.v7.widget.CardView>