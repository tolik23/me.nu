<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#86c30c"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btn_rating_sort"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/btn_search"
            android:layout_weight="1"
            android:text="по рейт."
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"/>
        <Button
            android:id="@+id/btn_distance_sort"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btn_search"
            android:text="по расст."
            android:textSize="10dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_kategory_sort"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/btn_search"
            android:text="по цен. кат."
            android:textSize="10dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>