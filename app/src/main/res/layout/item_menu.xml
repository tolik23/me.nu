<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/iv_imgDish"
            android:layout_margin="1.5dp"
            android:background="@drawable/frame"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nameDish"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_imgDish"
            android:layout_toEndOf="@+id/iv_imgDish" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_like"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="New Text"
            android:textColor="#000000"
            android:layout_below="@+id/tv_nameDish"
            android:layout_toEndOf="@+id/iv_imgDish" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_like"
            card_view:srcCompat="@drawable/ic_phone"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/tv_like"
            android:layout_toEndOf="@+id/tv_like" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dislike"
            android:text="New Text"
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:layout_alignBottom="@+id/iv_like"
            android:layout_toEndOf="@+id/iv_like" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_dislike"
            card_view:srcCompat="@drawable/ic_phone"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/tv_dislike"
            android:layout_toEndOf="@+id/tv_dislike" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_weight"
            android:text="New Text"
            android:textColor="#999999"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_like"
            android:layout_toEndOf="@+id/iv_imgDish" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description"
            android:text="New Text"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_weight"
            android:layout_toEndOf="@+id/iv_imgDish" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="New Text"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_description"
            android:layout_toEndOf="@+id/iv_imgDish" />
    </RelativeLayout>

</android.support.v7.widget.CardView>